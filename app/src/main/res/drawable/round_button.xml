<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="@android:color/holo_orange_dark" android:startColor="@android:color/holo_orange_light" />
            <stroke android:width="3dp" android:color="@android:color/darker_gray" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="@android:color/holo_orange_dark" android:startColor="@android:color/holo_orange_light" />
            <stroke android:width="3dp" android:color="@android:color/darker_gray" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimaryLight" />
            <stroke android:width="3dp" android:color="@android:color/darker_gray" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>